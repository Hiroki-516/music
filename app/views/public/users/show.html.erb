<div class="container p-3">
  <div class="row">
    <div class="col-md-5">

      <table class='table'>
        <tr>
          <%= image_tag @user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </tr>
        <tr>
      	  <th>ニックネーム</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>活動ステータス</th>
          <th><%= User.statuses_i18n[current_user.status] %></th>
        </tr>
        <tr>
      	  <th>紹介文</th>
      	  <th><%= @user.introduction %></th>
      	</tr>
      	<tr>
      	  <th>いいね一覧ページ</th>
      	  <th><%=link_to"いいねした楽曲はこちらから",favorites_user_path(@user) %></th>
      	</tr>
        <tr>
          <th>
           <% if current_user != @user %>
             <td><%= render "public/relationships/btn", user: @user %></td>
           <% else %>
             <% if current_user.email != "guest@example.com" %>
               <%= link_to edit_user_path(@user), class: "btn btn-primary btn-lg active btn-block edit_user_#{@user.id}" do %>
               <i class="fas fa-user-cog"></i>
               <% end %>
             <% end %>
           <% end %>
          </th>
        </tr>
      </table>
    </div>

    <div class="col-md-7">
      <div class="card-list-container py-5">
    <% @posts.each do |post| %>
        <div class="card w-80 mx-auto mt-4 shadow-lg">
          <%= link_to post_path(post.id) do %>
          <!--画像の幅自体は「w-25,50,75,100」で決定-->
            <%= image_tag post.get_image(150,150), class:"card-img-top w-25"; %>
          <% end %>

          <%= audio_tag(polymorphic_path(post.music), controls: true) %>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to(post_path(post.id), class:"text-dark") do %>
                <strong><i class="fa-solid fa-music"></i><span> <%= post.name %></span></strong>
              <% end %>
            </h4>
            <h6 class="card-subtitle mb-2 text-muted">
              <%= post.genre.name %>
            </h6>
            <p class="card-text">
              曲説明：<%= post.caption %>
            </p>
            <p><%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
               <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
            </p>
          </div>
            <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <%= paginate @posts %>
</div>