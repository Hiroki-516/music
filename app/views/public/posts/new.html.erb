<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">音楽投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @post.errors.count %>件のエラーが発生しました
            </h6>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @post do |f| %>
          <%= f.label :image, "ジャケット画像", class: "w-100" %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <%= f.label :music, "音楽ファイル", class: "w-100" %>
          <%= f.file_field :music, class: "w-100" %>
          <%= f.label :genre_id, "音楽ジャンル", class: "w-100" %>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_display), include_blank: "--選択して下さい--", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-music"></i></span>
            </div>
            <%= f.text_field :name, class:"form-control", placeholder:"曲名" %>
          </div>
          <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"曲説明をここに" %>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>