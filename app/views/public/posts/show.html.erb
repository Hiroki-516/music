<div>
  <%= image_tag @post.get_image(100,100) %>
  <%= audio_tag(polymorphic_path(@post.music), volume: 1.0, controls: true) %>
  <p>曲名：<%= @post.name %></p>
  <p>ジャンル：<%= @post.genre.name %></p>
  <p>曲説明：<%= @post.caption %></p>
  <%= link_to user_path(@post.user.id) do %>
  <p><%= image_tag @post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></p>
  <p>ニックネーム：<%= @post.user.name %></p>
  <% end %>

  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <%= link_to '編集', edit_post_path(@post), class: "btn btn-sm btn-success" %>
    <%= link_to '削除', post_path(@post), method: :delete, data: { comfirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}"%>
    <%#= link_to "削除", post_path(@post), method: :delete %>
  <% end %><br>
   <%= render "public/favorites/btn", post: @post %>
</div>


<div>
 <%= render "public/post_comments/index", post: @post %>
 <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>

</div>

