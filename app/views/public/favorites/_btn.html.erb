<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, style: "color: red;", remote: true do %>
    <!--<i class="fa-solid fa-heart" aria-hidden="true"></i>-->
    ♥<%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" do %>
    <!--<i class="fa-solid fa-heart" aria-hidden="true"></i>-->
    ♥<%= post.favorites.count %>
  <% end %>
<% end %>
