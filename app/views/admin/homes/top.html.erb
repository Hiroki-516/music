<div class="container">
  <div class="row my-3">
    <div class="col">
      <h3 class="border-bottom"><strong>音楽投稿一覧</strong></h4>
    </div>
  </div>
  <div class="row justify-content-center m-3 w-100">
    <div class="col">
      <table class='table table-hover table-inverse'>
       <thead>
        <tr>
          <th>音楽投稿日時</th>
          <th>ニックネーム</th>
          <th>ユーザー画像</th>
          <th>活動ステータス</th>
          <th>音楽ジャケット画像</th>
          <th>曲名</th>
          <td>曲説明</td>
          <th>曲説明の感情分析スコア</th>
        </tr>
       </thead>
       <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_post_path(post.id), class:"link" %></td>
            <td><%= post.user.name %> </td>
            <td><%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle w-50"; %></td>
            <td><%= post.user.status_i18n %></td>
            <td><%= image_tag post.get_image(100,100), class:"card-img-top w-50"; %></td>
            <td><%= post.name %></td>
            <td><%= post.caption %></td>
            <th><span class="sentiment-score"><%= post.score %></span></th>
          </tr>
         <% end %>
       </tbody>
      </table>
      <div class="outer">
      <div class="pagination-type">
        <%= paginate @posts %>
      </div>
      </div>
    </div>
  </div>
</div>
