<div class="container">
  <div style= 'width: 80% ; margin: 0 auto;' class="py-4" >
    <h3 class="border-bottom"><strong>ユーザー一覧</strong></h3>
    <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ユーザー画像</th>
        <th>ニックネーム</th>
        <th>活動ステータス</th>
        <th>自己紹介文</th>
        <th>会員ステータス</th>
      </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
      <tr>
        <td> <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></td>
        <td><%= link_to user.name, admin_user_path(user.id), class:"link" %></td>
        <td><%= user.status_i18n %></td>
        <td><%= user.introduction %></td>
        <td><% if user.is_deleted? %>
            <p class="text-danger font-weight-bold"><%= user.is_deleted_text %></p>
            <% else %>
            <p class="text-light font-weight-bold"><%= user.is_deleted_text %></p>
            <% end %>
        </td>
      </tr>
        <% end %>
    </tbody>
    </table>
  </div>

  <div class="outer">
    <div class="inner">
      <%= paginate @users %>
    </div>
  </div>
 </div>